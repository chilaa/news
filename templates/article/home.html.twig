{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        {#{{ dump(posts) }}#}
        {% for post in posts %}
            <div class="well">
                <h2 class="well">{{ post.title }}</h2>
                <h4 class="well well-sm">{{ post.subtitle }}</h4>
                <p>{{ post.body }}</p>
                <h5>Posted by <strong>{{ post.owner }}</strong></h5>
                {% if app.user %}
                    <a class="btn btn-default">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                {% endif %}
                {{ dump(post) }}

            </div>
        {% endfor %}
    </div>
{% endblock %}
