{% extends "base.html.twig" %}
{% block title %}New Post{% endblock %}
{% block body %}
<div class="container">
    <form action="{{ path("submit") }}" method="post">
        <div class="form-group" >
            <label for="title">Title:</label>
            <input type="text" class="form-control" id="title" placeholder="Enter title" name="title">
        </div>
        <div class="form-group">
            <label for="subtitle">Sub-Title:</label>
            <input type="text" class="form-control" id="subtitle" placeholder="Enter subtitle" name="subtitle">
        </div>
        <div class="form-group">
            <label for="body" >Body: </label>
            <textarea class="form-control" id="body" name="body" placeholder="Enter body text" rows="10" ></textarea>
        </div>
        <div class="form-group">
            <label for="image">Choose image</label>
            <input type="file" class=" btn btn-default form-control" id="image" name="image" >
            {#<label for="image" class="form-control" >Upload Image: </label>#}
        </div>
        <div class="form-group">
            <label for="tags">Tags :</label>
            <input type="text" class="form-control" id="tags" placeholder="Enter tags" name="tags">
        </div>
        <input type="submit" value="Add Post" class="btn btn-success">


    </form>
</div>
{% endblock %}