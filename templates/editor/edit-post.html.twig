{% extends "base.html.twig" %}
{% block title %}Edit Post{% endblock %}
{% block body %}
    <div class="container">
        <form action="{{ path("submit-edited-post", {id: data.id}) }}" method="post">
            <div class="form-group" >
                <label for="title">Title:</label>
                <input type="text" class="form-control" value="{{ data.title }}" id="title" placeholder="Enter title" name="title">
            </div>
            <div class="form-group">
                <label for="subtitle">Sub-Title:</label>
                <input type="text" class="form-control" value="{{ data.subtitle }}" id="subtitle" placeholder="Enter subtitle" name="subtitle">
            </div>
            <div class="form-group">
                <label for="body" >Body: </label>
                <textarea class="form-control" id="body"  name="body" placeholder="Enter body text" rows="10" >{{ data.body }}</textarea>
            </div>
            <div class="form-group">
                <label for="image">Choose image</label>
                <input type="file" class=" btn btn-default form-control" value="{{ data.image }}" id="image" name="image" >
                {#<label for="image" class="form-control" >Upload Image: </label>#}
            </div>
            <div class="form-group">
                <label for="tags">Tags :</label>
                <input type="text" class="form-control" id="tags" {% if data.tags %} value="{{ data.tags }}" {% endif %} placeholder="Enter tags" name="tags">
            </div>
            <input type="submit" value="Save" class="btn btn-success">
            <a class="btn btn-danger" href="{{ path("delete-post", {id: data.id}) }}" >Delete</a>



        </form>
    </div>
{% endblock %}